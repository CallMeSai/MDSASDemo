@page
@model MdsasDemo.Pages.RegisterModel
@{

}

<form class="wizard-form steps-validation" method="post" data-fouc>
    @Html.AntiForgeryToken()
    <h6>Patient Information</h6>
    <fieldset>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group unique-number-form-group">
                    <label>Unique Number: <span class="text-danger">*</span></label>
                    <input type="text" asp-for="RegisterPatient.UniqueNumber" id="registerPatientUniqueNumber" class="form-control" placeholder="Unique Number" data-cy="patient-register-uniquenumber">
                    <span class="validation-invalid-label text-danger" asp-validation-for="RegisterPatient.UniqueNumber"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Date of Birth: <span class="text-danger">*</span></label>
                    <input type="date" asp-for="RegisterPatient.DateOfBirth" class="form-control format-dob required" placeholder="dd/MM/yyyy" data-cy="patient-register-dob">
                    <span class="validation-invalid-label text-danger" asp-validation-for="RegisterPatient.DateOfBirth"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>First Name: <span class="text-danger">*</span></label>
                    <input type="text" asp-for="RegisterPatient.Forename" class="form-control text-capitalize required" placeholder="Enter first name" data-cy="patient-register-fname">
                    <span class="validation-invalid-label text-danger" asp-validation-for="RegisterPatient.Forename"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>Surname: <span class="text-danger">*</span></label>
                    <input type="text" asp-for="RegisterPatient.Surname" class="form-control text-capitalize required" placeholder="Enter surname" data-cy="patient-register-sname">
                    <span class="validation-invalid-label text-danger" asp-validation-for="RegisterPatient.Surname"></span>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" data-cy="patient-save-card-button">Register<i class="icon-database-check mr-2"></i></button>
    </fieldset>
</form>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}